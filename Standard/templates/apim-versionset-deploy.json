{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "apimServiceName": {
          "type": "string"
        },        
        "apimVersionSetToken": {
          "type": "string"
        },
        "swaggerVersionSetToken": {
          "type": "string"
        }
    },
    "variables": {        
        "apimVersionSetName": "[concat(parameters('apimServiceName'), parameters('apimVersionSetToken'))]",
        "swaggerVersionSetName": "[concat(parameters('apimServiceName'), parameters('swaggerVersionSetToken'))]"

    },
    "resources": [
        {
            "name": "[variables('swaggerVersionSetName')]",
            "type": "Microsoft.ApiManagement/service/api-version-sets",
            "apiVersion": "2018-06-01-preview",
            "properties": {
                "description": "Version set for Swagger API",
                "versionQueryName": "api-version-swagger",
                "displayName": "SwaggerAPIs-DEV",
                "versioningScheme": "segment"
            }
        },
        {
            "name": "[variables('apimVersionSetName')]",
            "type": "Microsoft.ApiManagement/service/api-version-sets",
            "apiVersion": "2018-06-01-preview",
            "properties": {
                "description": "Version set for HTTP bin API",
                "versionQueryName": "api-version",
                "displayName": "AutoAPIs-DEV",
                "versioningScheme": "segment"
            }
        }
    ]
}